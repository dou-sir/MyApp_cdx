<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginRight="3dp"
                android:src="@drawable/white_pin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="南京市江宁区弘景大道99号"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp" />
        </LinearLayout>
        <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="35dp"-->
        <!--android:layout_marginBottom="3dp"-->
        <!--android:layout_marginLeft="20dp"-->
        <!--android:layout_marginRight="20dp"-->
        <!--android:layout_marginTop="3dp"-->
        <!--android:background="@drawable/search_background"-->
        <!--android:clickable="true"-->
        <!--android:gravity="center"-->
        <!--android:orientation="horizontal">-->

        <!---->
        <!--</LinearLayout>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="18dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/search"
                android:onClick="search"/>

            <EditText
                android:id="@+id/et_gname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入商品名称"
                android:textSize="12dp"
                />
        </LinearLayout>

        <ScrollView
            android:id="@+id/sv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ViewFlipper
                    android:id="@+id/flipper"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="#000456"
                    android:flipInterval="5000" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ad1" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/guanggao2" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ad2" />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ad3" />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ad4" />
                </ViewFlipper>




                <!--<ImageView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="150dp"-->
                <!--android:src="@drawable/guanggao" />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:background="#ffffff"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:background="@drawable/shadow">
                        <ImageView
                            android:id="@+id/iv_shuiguo"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/shuiguo"
                            android:onClick="shuiguo"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="新鲜水果"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:background="@drawable/shadow">
                        <ImageView
                            android:id="@+id/iv_shucai"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/shucai"/>
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="时令蔬菜"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:background="@drawable/shadow">
                        <ImageView
                            android:id="@+id/iv_meat"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/zhurou"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="肉蛋家禽"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:background="@drawable/shadow">
                        <ImageView
                            android:id="@+id/iv_milk"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/niunai"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="风味冰品"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:background="#ffffff"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:background="@drawable/shadow">
                        <ImageView
                            android:id="@+id/iv_wine"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/pijiu"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="酒水饮料"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:background="@drawable/shadow">
                        <ImageView
                            android:id="@+id/iv_food"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/lingshi"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="休闲零食"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:background="@drawable/shadow">
                        <ImageView
                            android:id="@+id/iv_bread"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/mianbao"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="面包蛋糕"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:background="@drawable/shadow">
                        <ImageView
                            android:id="@+id/iv_oil"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/liangyou"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="粮油副食"/>
                    </LinearLayout>
                </LinearLayout>

                <ListView
                    android:id="@+id/lv_supermarket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </ListView>




            </LinearLayout>


        </ScrollView>


    </LinearLayout>


</LinearLayout>
